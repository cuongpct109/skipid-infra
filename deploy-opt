#!/bin/sh
rm -rf ~/Documents/dbs /opt/dbs /opt/datastack /opt/datastack.zip && sudo apt update || sudo apt install -y wget && wget --load-cookies /opt/cookies.txt "https://docs.google.com/uc?export=download&confirm=$(wget --quiet --save-cookies /opt/cookies.txt --keep-session-cookies --no-check-certificate 'https://docs.google.com/uc?export=download&id=1vF98vquW-F_en-4YFCimES84WeE1AcNY' -O- | sed -rn 's/.*confirm=([0-9A-Za-z_]+).*/\1\n/p')&id=1vF98vquW-F_en-4YFCimES84WeE1AcNY" -O /opt/datastack.zip && rm -rf /opt/cookies.txt && unzip /opt/datastack.zip -d /opt/datastack && mkdir /opt/dbs && cd /opt/dbs && git clone https://gitlab.com/ultorex/skipid/backend/dbs.git && rsync -a /opt/datastack/ /opt/dbs/ && mkdir ~/Documents/dbs && rsync -a /opt/dbs/ ~/Documents/dbs/ && sudo apt install -y docker && sudo apt install -y docker-compose && sudo systemctl enable docker.service && sudo systemctl enable containerd.service && sudo systemctl restart docker.service && sudo systemctl restart containerd.service && cd ~/Documents/dbs && sudo docker-compose up >> /dev/null & sudo apt -y autoremove && rm -rf /opt/skipid-infra /opt/dbs /opt/datastack /opt/datastack.zip

